<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/navigationbar_background" >

        <Button
            android:id="@+id/btnCancelComment"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:background="@drawable/detail_back_normal"
            android:layout_gravity="center_vertical"
             />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="评论列表" />

        <Button
            android:id="@+id/btnSendComment"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/comment_btn_selector"
            android:onClick="onClick"
            android:text="发送"
            android:textColor="@android:color/white"
            android:enabled="false"
            android:visibility="invisible" />

    </LinearLayout>

    <EditText
        android:id="@+id/etSendComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:visibility="gone">

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/lvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_group_avatar_background" >
    </ListView>

</LinearLayout>
